<idea-plugin>
    <!-- Plugin ID and metadata -->
    <id>org.jetbrains.plugins.savepoint</id>
    <name>Project Save Points</name>
    <vendor>Anupam Tarai</vendor>

    <!-- Declare dependency on IntelliJ Platform -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Specify the supported IntelliJ IDEA versions -->
    <idea-version since-build="233.0" until-build="242.*"/>

    <!-- Declare plugin extensions -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Tool window extension -->
        <toolWindow id="SavePointTool"
                    factoryClass="org.jetbrains.plugins.savepoint.toolWindow.SavePointToolWindowFactory"
                    anchor="bottom"/>
    </extensions>

    <!-- Define plugin version -->
    <version>2.0.2</version>
</idea-plugin>
